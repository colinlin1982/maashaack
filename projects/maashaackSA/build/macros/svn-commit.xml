
<project>
    
    <macrodef name="svn-commit">
        <attribute name="path"/>
        <attribute name="message"/>
        
        <sequential>
            <exec executable="svn" taskname="svn" failonerror="true">
                <arg line="commit @{path} -m '@{message}'"/>
            </exec>
        </sequential>
    </macrodef>
    
</project>
