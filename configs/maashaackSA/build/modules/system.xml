<project>
    
    <target name="compile-system">
        
        <propertycopy name="path" from="project.fullpath" override="true"/>
        
        <!-- build -->
        <ant antfile="${path}/meta.xml" target="main" inheritAll="false">
            <property name="FLEX_HOME" value="${FLEX_HOME}" />
            <property name="TODAY" value="${TODAY}" />
            <property name="local.flashplayerversion" value="${local.flashplayerversion}" />
            <property file="${path}/build/build.properties"/>
        </ant>
        
        <!-- deploy to libs -->
        
        <copy file="${path}/bin-release/system.swc" todir="libraries/ax/lib-swc" overwrite="true" />
        
        <copy file="${path}/bin-release/system.swc" todir="libs/swc/packages" overwrite="true" />
        <copy file="${path}/bin-release/system.abc" todir="libs/abc/packages" overwrite="true" />
        
        <copy file="${path}/bin-release/system.swc" todir="packages/system_hosts/lib-swc" overwrite="true" />
        <copy file="${path}/bin-release/system.abc" todir="packages/system_hosts/lib-abc" overwrite="true" />
        
        <copy file="${path}/bin-release/system.swc" todir="packages/graphics/lib-swc" overwrite="true" />
        <copy file="${path}/bin-release/system.abc" todir="packages/graphics/lib-abc" overwrite="true" />
    </target>
    
</project>
