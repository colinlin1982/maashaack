<project>
    
    <target name="compile-system_terminals">
        
        <propertycopy name="path" from="project.fullpath" override="true"/>
        
        <!-- build -->
        <ant antfile="${path}/meta.xml" target="main" inheritAll="false">
            <property name="FLEX_HOME" value="${FLEX_HOME}" />
            <property name="TODAY" value="${TODAY}" />
            <property name="local.flashplayerversion" value="${local.flashplayerversion}" />
            <property file="${path}/build/build.properties"/>
        </ant>
        
        <!-- deploy to libs -->
        <copy file="${path}/bin-release/system.terminals.swc" todir="libs/swc/packages" overwrite="true" />
        <copy file="${path}/bin-release/system.terminals.abc" todir="libs/abc/packages" overwrite="true" />
        
        <!-- sync with other projects -->
        <copy file="${path}/bin-release/system.terminals.swc" todir="libraries/astuce/lib-swc" overwrite="true" />
        <copy file="${path}/bin-release/system.terminals.abc" todir="libraries/astuce/lib-abc" overwrite="true" />
        
        <copy file="${path}/bin-release/system.terminals.swc" todir="packages/system/lib-swc" overwrite="true" />
        <copy file="${path}/bin-release/system.terminals.abc" todir="packages/system/lib-abc" overwrite="true" />
        
        <copy file="${path}/bin-release/system.terminals.swc" todir="packages/system_diagnostics/lib-swc" overwrite="true" />
        <copy file="${path}/bin-release/system.terminals.abc" todir="packages/system_diagnostics/lib-abc" overwrite="true" />
        
    </target>
    
</project>
