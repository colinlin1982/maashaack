<project>
    
    <target name="compile-astuce">
        
        <propertycopy name="path" from="project.fullpath" override="true"/>
        
        <!-- build -->
        <ant antfile="${path}/meta.xml" target="main" inheritAll="false">
            <property name="FLEX_HOME" value="${FLEX_HOME}" />
            <property name="TODAY" value="${TODAY}" />
            <property name="local.flashplayerversion" value="${local.flashplayerversion}" />
            <property name="build.nodocumentation" value="${build.nodocumentation}" />
            <property file="${path}/src/library/ASTUce/version.properties"/>
            <property file="${path}/build/build.properties"/>
        </ant>
        
        <!-- deploy to libs -->
        <copy file="${path}/bin-release/astuce.swc"      todir="libs/swc/libraries" overwrite="true" />
        <copy file="${path}/bin-release/astuce.abc"      todir="libs/abc/libraries" overwrite="true" />
        <copy file="${path}/bin-release/astuce-test.abc" todir="libs/abc/libraries" overwrite="true" />
        
        <!-- sync with other projects -->
        <copy file="${path}/bin-release/astuce.swc" todir="packages/system_data/lib-swc" overwrite="true" />
        
    </target>
    
</project>
