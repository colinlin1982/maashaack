<?xml version="1.0" encoding="UTF-8"?>

<project name="core-SA" default="main" basedir=".">
    
    <target name="define">
        
        <taskdef resource="net/sf/antcontrib/antlib.xml">
            <classpath >
                <fileset dir="build/ant/" includes="ant-contrib-1.0b3.jar"/>
            </classpath>
        </taskdef>
        <echo message="ant-contrib tasks defined" />
        
        <available file="build/user.properties" type="file" property="found.userprops" />
        <if>
            <equals arg1="${found.userprops}" arg2="true"/>
        <then>
            <property file="build/user.properties"/>
        </then>
        <else>
            <property file="build/buils.properties"/>
        </else>
        </if>
        
        <condition property="FLEX_HOME" value="${FLEX_HOME_MAC}">
            <os family="mac" />
        </condition>
        
        <condition property="FLEX_HOME" value="${FLEX_HOME_WIN}">
            <os family="windows" />
        </condition>
        
        <tstamp>
            <format property="TODAY" pattern="dd MMMM yyyy" />
        </tstamp>
        
        <taskdef resource="flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar" />
        
    </target>
    
    <target name="clean" depends="define">
        <delete dir="${basedir}/${release.dir}" />
    </target>
    
    <import file="meta.xml" />
    
</project>